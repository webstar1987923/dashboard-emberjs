<div class="row">
	<div class="col-sm-12">
		<h3>Shore Excurtions</h3>		
	</div>
	{{#each excurtions as |excursion|}}
		<div class="col-sm-3">	 	
			<div class="excursion">
				<img src={{excursion.img}}>
				<p class="name">{{excursion.name}}</p>				
				<p class="loc">{{excursion.loc}}</p>				
				<div class="row price">				
					<div class="col-sm-7">${{excursion.price}} per Group</div>			
					<div class="col-sm-5">{{excursion.hours}} Hours</div>
				</div>
				<br>
				<span>{{excursion.desc}}</span>				
			</div>		
		</div>
	{{/each}}
	<div class="col-sm-12">
		<hr style="border-width: 3px; margin-top:5vw;">
	</div>
</div>